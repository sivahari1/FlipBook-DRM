# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# Authentication
NEXTAUTH_URL="https://yourdomain.com"
NEXTAUTH_SECRET="your-super-secret-key-minimum-32-characters-long"

# Email Service (Choose one option)
# Option 1: Resend (Recommended for India)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxx"
FROM_EMAIL="noreply@yourdomain.com"

# Option 2: SendGrid Alternative
# SENDGRID_API_KEY="SG.xxxxxxxxxxxxxxxxxxxxxxxxxx"
# FROM_EMAIL="noreply@yourdomain.com"

# Payment Gateway
RAZORPAY_KEY_ID="rzp_live_xxxxxxxxxxxxxxxxxx"
RAZORPAY_KEY_SECRET="your_razorpay_secret_key"

# File Storage (Choose one option)
# Option 1: AWS S3
AWS_ACCESS_KEY_ID="AKIAXXXXXXXXXXXXXXXXX"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="ap-south-1"
AWS_S3_BUCKET="your-production-bucket-name"

# Option 2: Cloudinary Alternative
# CLOUDINARY_CLOUD_NAME="your-cloud-name"
# CLOUDINARY_API_KEY="123456789012345"
# CLOUDINARY_API_SECRET="your-cloudinary-secret"

# Security
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# Analytics (Optional)
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"

# Performance Monitoring (Optional)
SENTRY_DSN="https://xxxxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx"

# Environment
NODE_ENV="production"